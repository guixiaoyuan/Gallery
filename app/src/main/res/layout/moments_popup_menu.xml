<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moments_popup_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_menu_bg"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:background="@drawable/popup_menu_bg"
            android:text="@string/moments_show"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_menu_all"
        android:layout_width="195dp"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/actionbar_menu_text_all"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_menu_photo"
        android:layout_width="195dp"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:layout_gravity="fill_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_photo_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/actionbar_menu_text_photo"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu" />
    </LinearLayout>

    <!--//[BUGFIX]-Add by TCTNJ,jian.pan1, 2015-12-26,PR1048523 Begin -->
    <LinearLayout
        android:id="@+id/actionbar_menu_fyuse"
        android:layout_width="195dp"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:layout_gravity="fill_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_fyuse_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/actionbar_menu_text_fyuse"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu" />
    </LinearLayout>
    <!--//[BUGFIX]-Add by TCTNJ,jian.pan1, 2015-12-26,PR1048523 End -->

    <LinearLayout
        android:id="@+id/actionbar_menu_video"
        android:layout_width="195dp"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:layout_gravity="fill_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_video_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/actionbar_menu_text_video"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu" />
    </LinearLayout>

</LinearLayout>