<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/bg_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="0dp"
        android:contentDescription="bg_frame"
        android:padding="0dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="picture"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/fg_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="0dp"
        android:contentDescription="fg_frame"
        android:padding="0dp"
        android:scaleType="fitXY" />

    <com.tct.gallery3d.polaroid.view.SloganText
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone"
        android:padding="0dp"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:text="@string/polaroid_default_slogan"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <com.tct.gallery3d.polaroid.view.TagView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp" />

    <com.tct.gallery3d.polaroid.view.TagView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp" />
    <!-- /FrameLayout -->

</FrameLayout>