<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f000bcd4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.tct.gallery3d.ui.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/tx_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:text="@string/boom_key_tip_1"
            android:textColor="#f0f0f0"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0"
        android:background="#4de4f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/btn_arrow_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_arrow_left"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:visibility="gone"
                android:src="@drawable/tip_arrow_left" />

            <TextView
                android:id="@+id/tx_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#f0f0f0"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/dot_selected" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/dot_normal" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/dot_normal" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_arrow_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/tip_arrow_right" />

            <TextView
                android:id="@+id/tx_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:textColor="#f0f0f0"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>