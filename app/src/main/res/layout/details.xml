<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">
<!--//[BUGFIX]-Add by TCTNJ,jian.pan1, 2015-01-20,PR902073 Begin -->
    <TextView
        android:id="@+id/tx_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="10dp"
        android:textColor="@color/details_title_color"/>

    <TextView
        android:id="@+id/tx_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/details_content_color"/>
<!--//[BUGFIX]-Add by TCTNJ,jian.pan1, 2015-01-20,PR902073 end -->
</LinearLayout>