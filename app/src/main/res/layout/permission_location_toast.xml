<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/permission_location_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#343334" >
<!--//[BUGFIX]-Add by TSNJ,chunhua.liu, 2016-01-13,defect 1355113 begin -->
    <TextView
        android:id="@+id/permission_location_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="10dp"
        android:text="@string/permission_location_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/permission_location_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:text="@string/permission_location_settings"
        android:textSize="20sp"
        android:textColor="#8A9252"
        android:gravity="right|center_vertical"
        android:background="@android:color/transparent" />
<!--//[BUGFIX]-Add by TSNJ,chunhua.liu, 2016-01-13,defect 1355113 end -->
</LinearLayout>
